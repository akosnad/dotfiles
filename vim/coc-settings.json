{
    "languageserver": {
        "ccls" : {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                "Makefile"
            ],
            "enable": false
        }
    },
    "clangd.fallbackFlags": ["-std=c++20"],
    "clangd.compilationDatabaseCandidates": ["build"],
    "semanticTokens.enable": true,
    "rust-analyzer.inlayHints.enable": false
}
