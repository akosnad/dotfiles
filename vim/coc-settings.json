{
    "languageserver": {
        "ccls" : {
			"command": "ccls",
			"filetypes": [
				"c",
				"cpp",
				"objc",
				"objcpp"
			],
			"rootPatterns": [
				".ccls",
				"compile_commands.json",
				"Makefile"
			],
            "disableCompletion": false,
            "disableDiagnostics": false,
            "disableDynamicRegister": false,
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                },
                "highlight": {
                    "lsRanges": true
                },
                "clang": {
                    "extraargs": "-std=c++20"
                }
            }
        }
    },
    "rust-analyzer.inlayHints.enable": false
}
