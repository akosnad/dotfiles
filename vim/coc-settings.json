{
    "languageserver": {
        "ccls" : {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp",
                "cuda"
            ],
            "rootPatterns": [
                ".ccls-root",
                "compile_commands.json",
                ".git/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls-cache"
                },
                "client": {
                    "snippetSupport": true
                },
                "highlight": {
                    "lsRanges": true
                }
            }
        }
    },
    "rpc.enabled": false,
    "rpc.showProblems": false,
    "rpc.lowerDetailsEditing": "Working on {file_name}",
    "rpc.detailsViewing": "{workspace_folder}",
    "rpc.largeImage": "Editing a {lang} file"
}
