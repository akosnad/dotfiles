{
    "languageserver": {
        "ccls" : {
			"command": "ccls",
			"filetypes": [
				"c",
				"cpp",
				"objc",
				"objcpp"
			],
			"rootPatterns": [
				".ccls",
				"compile_commands.json",
				"Makefile"
			],
            "disableCompletion": true,
            "disableDiagnostics": true,
            "disableDynamicRegister": true,
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                },
                "highlight": {
                    "lsRanges": true
                }
            }
        }
    },
    "rpc.enabled": false,
    "rpc.showProblems": false,
    "rpc.lowerDetailsEditing": "Working on {file_name}",
    "rpc.detailsViewing": "{workspace_folder}",
    "rpc.largeImage": "Editing a {lang} file"
}
